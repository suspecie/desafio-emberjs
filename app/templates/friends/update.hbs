<h3>Atualizar Dados do Amigo</h3>

{{#link-to "friends" class="btn"}} 
    Voltar
{{/link-to}}
<hr>

<form {{ action "save" model on="submit"}}>
    {{ input value=model.name placeholder="Nome do amigo" min="3" }}
    {{ input value=model.lastname placeholder="Sobrenome do amigo"  min="3"}}
    {{ input value=model.friendsSince placeholder="Data" }}
    
    <hr>
    <input type="submit" value="Salvar"/>
</form>