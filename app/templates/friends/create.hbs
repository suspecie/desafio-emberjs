<h3>Novo Amigo</h3>

<form {{ action "save" model on="submit"}}>
    {{ input value=model.name placeholder="Nome do amigo" min="3" }}
    {{ input value=model.lastname placeholder="Sobrenome do amigo"  min="3"}}
    
    {{bootstrap-datepicker-inline value=expiresAt }}
    <hr>
    <input type="submit" value="Salvar"/>
</form>